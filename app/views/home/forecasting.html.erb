<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Amount</th>
			<th>Spending</th>
			<th>Running Total</th>
		</tr>
	</thead>
	<tbody>
		<% current_user.forecast_register.each do |date,line| %>
		<tr>
			<td><%= date %></td>
			<td><%= line[:amount] %></td>
			<td><%= current_user.home_asset_type.to_currency(line[:spending]) %></td>
			<td><%= current_user.home_asset_type.to_currency(line[:running_total]) %></td>
		</tr>
		<% end %>
	</tbody>
</table>