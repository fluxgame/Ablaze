<p id="notice"><%= notice %></p>

<h1>Asset Valuations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Asset type</th>
      <th>Valuation asset type</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asset_valuations.each do |asset_valuation| %>
      <tr>
        <td><%= asset_valuation.date %></td>
        <td><%= asset_valuation.asset_type %></td>
        <td><%= asset_valuation.valuation_asset_type %></td>
        <td><%= asset_valuation.amount %></td>
        <td><%= link_to 'Show', asset_valuation %></td>
        <td><%= link_to 'Edit', edit_asset_valuation_path(asset_valuation) %></td>
        <td><%= link_to 'Destroy', asset_valuation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

